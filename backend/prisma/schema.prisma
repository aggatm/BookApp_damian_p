generator client {
  provider      = "prisma-client-js"
  binaryTargets = "linux-musl-openssl-3.0.x"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://user:password@postgres-db:5432/postgres"
}

model Book {
  id          String   @id @default(uuid())
  title       String   @unique
  author      String
  isbn        String
  pagesNumber Int
  rate        Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([title, author])
}
